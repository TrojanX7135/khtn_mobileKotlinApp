<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_photo"
    android:elevation="10dp"
    android:layout_marginEnd="20dp"
    android:id="@+id/containerItem">
    
    <ImageView
        android:id="@+id/imageItemPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/item_phot"/>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_text_item_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/textItemPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_clear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageClear"/>

</androidx.constraintlayout.widget.ConstraintLayout>